import random     
n = random.randint(1 , 100)
attempt = 5
print("Guess the number between 1 to 100 in 5 attempts")
for g in range(1 , attempt+1):
    a = int(input(f"Attempt {g} : Guess a number :"))
    if a > n:
        print("Enter a smaller number")
    elif a < n :
        print("Enter a larger number")
    else:
      print(f"Congratulations! You have guessed the right number {n} in {g} guesses")
      break

if g == attempt:
    print(f"Sorry! You have exhausted all your attempts. The number was {n}")
